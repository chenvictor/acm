#!/usr/bin/env bash

[ "$0" = 'bash' ] ||
exec /usr/bin/env bash --rcfile "$0" "$@"

# source .bashrc file
[ -r ~/.bashrc ] && {
  . ~/.bashrc
}

# FUNCTIONS ====================================================================

STD="-std=c++17"
FLAGS="-Wall -Wshadow -Wno-sign-compare -Wconversion -Wmaybe-uninitialized -Wfatal-errors"
# Compile c++
function co() {
  file=$1; shift;
	g++ $STD ${file/.cpp}.cpp -o ${file/.cpp} -O2 $FLAGS $@
}
function de() {
  file=$1; shift;
	g++ -ggdb $STD ${file/.cpp}.cpp -o ${file/.cpp} -O0 $FLAGS -D DEBUG $@
}

# Open vim, default to .cpp. .py
function vicpp() {
  if [ -f ${1/.cpp}.cpp ]; then
    vim ${1/.cpp}.cpp
  elif [ -f ${1/.py}.py ]; then
    vim ${1/.py}.py
  elif [ -f ${1} ]; then
    vim ${1}
  else
    vim ${1}
  fi
}

# Create new folder and symlink it
function init() {
  readonly CUR=cur
  if [ "$#" -ne 1 ]; then
    echo "init requires exactly one argument"
    return -1
  fi
  mkdir -p $1
  ln -sf $1 $CUR
  cd $CUR
}

# PROMPT =======================================================================

PS1='[ACM]:\w\$ '

# ALIASES ======================================================================

alias rem='echo is best girl'
alias emily=rem
alias vi='vicpp'
alias sm='submit'

# BINARIES

SCRIPT=`realpath $BASH_SOURCE`
SCRIPTPATH=`dirname $SCRIPT`
export PATH="$SCRIPTPATH/bin":$PATH

# Increase stack size

ulimit -s 1048576

